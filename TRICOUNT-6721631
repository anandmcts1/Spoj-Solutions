
#include <stdio.h>
int main()
 {
   int t;
   long long int k,n;
    scanf("%d",&t);
           while(t--)
           {
        scanf("%lld",&n); 
      if(n%2==0){n=n/2; k=(2*n*n*n)+(((5*n*n)+(n))/2);printf("%lld\n",k);}
      else{n=(n+1)/2;  k=(2*n*n*n)-(((n*n)+n)/2); printf("%lld\n",k);}
  }
          return 0;
}

